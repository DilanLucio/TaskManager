@model IEnumerable<TaskManager.Models.Tarea>

<h1>Lista de Tareas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Estado</td>
                <td>@tarea.Prioridad</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@tarea.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@tarea.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Crear Nueva Tarea</a>
